@using System.Web.Configuration;

@{
    string WebURL = WebConfigurationManager.AppSettings["WebUrl"];
}

<nav class="navbar navbar-default">
    <div class="container-fluid">

        <!-- Brand/logo -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#example-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Content(WebURL)">Eva System - @ViewBag.name</a>
        </div>

        <!-- Collapsible Navbar -->
        <div class="collapse navbar-collapse" id="example-1">
            <ul class="nav navbar-nav">
                @if (ViewBag.accountid != null)
                {
                    <li><a href="@Url.Action("Logout", "Partial")">登出</a></li>
                    <li><a href="@Url.Content(WebURL + "/func/Keyin")">新增資詢單</a></li>
                    <li><a href="@Url.Content(WebURL + "/func/KeyinList")">資詢單</a></li>
                    <li><a href="@Url.Content(WebURL + "/func/CompleteList")">成交單</a></li>
                }
            </ul>
        </div>

    </div>
</nav>
